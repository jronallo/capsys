<% if params[:category] %>
  <h2><%= link_to 'Collection Profiles', profiles_path %> > <%= params[:category] %> Category</h2>
<% else -%>
  <h2>Collection Profiles</h2>
<% end -%>


<%= render :partial => 'categories' %>

<div class="row">
  <div class="span6" id="searchbox">
    <div class="inner">
      <form>    
        <i class="icon-search"></i>
        <input type="text" name="search" id="search"
          placeholder="Filter Profiles">
      </form>
      <span id="search_count"></span>
    </div>
  </div>
  
  <% if current_user %>
    <div class="span6" id="newprofile">
      <div class="inner">
      <%= link_to 'New Profile', new_profile_path, :class => [:btn, "btn-success", "btn-large"] %>
      </div>
    </div>
  <% end -%>
  
</div>


<%= render :partial => "profiles" %>