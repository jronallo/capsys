<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "CAPS (Alpha)", root_path, 
        :class => 'brand', :title => app_name %>
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="nav-collapse">
        <ul class="nav">
          <li <%= 'class="active"'.html_safe if current_page?(profiles_path) %>>
            <%= link_to 'Profiles', profiles_path %>
          </li>
          <li <%= 'class="active"'.html_safe if current_page?(achievements_path) %>>
            <%= link_to 'Achievements', achievements_path %>
          </li>
          <li <%= 'class="active"'.html_safe if current_page?(users_path) %>>
            <%= link_to 'Users', users_path %>
          </li>
          <li <%= 'class="active"'.html_safe if current_page?(about_path) %>>
            <%= link_to 'About', about_path %>
          </li>  
          <li <%= 'class="active"'.html_safe if current_page?(curate_path) %>>
            <%= link_to 'Curate', curate_path %>
          </li>
          <li <%= 'class="active"'.html_safe if current_page?(api_path) %>>
            <%= link_to 'API', api_path %>
          </li>
          <li>
            <%= link_to 'Features & Bugs', 'https://github.com/jronallo/capsys/issues'%>
          </li>
        </ul>
        <ul class='secondary-nav nav'>
          <% if current_user %>
            <li class="current_user"><%= current_user_in_nav %></li>
            <li><%= link_to "Sign Out", signout_path %></li>
          <% else -%>
            <li><%= link_to "Sign in with Twitter", "/auth/twitter" %></li>
          <% end -%>
        </ul>        
      </div> 
    </div>
  </div>
</div>
